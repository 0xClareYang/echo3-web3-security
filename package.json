{
  "name": "echo3-backend",
  "version": "1.0.0",
  "description": "Echo3 Backend API - Secure Gateway for AI-Powered Web3 Security Analysis",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .ts",
    "format": "prettier --write src/",
    "migrate": "npm run build && node dist/database/migrate.js",
    "seed": "npm run build && node dist/database/seed.js",
    "docker:build": "docker build -t echo3-backend .",
    "docker:run": "docker run -p 3000:3000 echo3-backend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "axios": "^1.5.0",
    "ethers": "^6.8.0",
    "web3": "^4.2.0",
    "@solana/web3.js": "^1.87.0",
    "winston": "^3.10.0",
    "express-winston": "^4.2.0",
    "prom-client": "^14.2.0",
    "@opentelemetry/api": "^1.6.0",
    "nodemailer": "^6.9.5",
    "bull": "^4.11.4",
    "node-cron": "^3.0.2",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.0",
    "@types/cors": "^2.8.14",
    "@types/compression": "^1.7.3",
    "@types/morgan": "^1.9.5",
    "@types/bcryptjs": "^2.4.4",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/pg": "^8.10.2",
    "@types/nodemailer": "^6.4.10",
    "@types/uuid": "^9.0.4",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.12",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "eslint": "^8.49.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}